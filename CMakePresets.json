{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install/${presetName}",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/bin",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/bin",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/lib/${presetName}"
            }
        },
        {
            "name": "ninja-debug",
            "inherits": "base",
            "displayName": "Ninja (MSVC) - Debug",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "ninja-release",
            "inherits": "base",
            "displayName": "Ninja (MSVC) - Release",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "vs2022-x64",
            "inherits": "base",
            "displayName": "Visual Studio 2022 - x64",
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "value": "x64"
            },
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ninja-debug",
            "configurePreset": "ninja-debug",
            "jobs": 0
        },
        {
            "name": "ninja-release",
            "configurePreset": "ninja-release",
            "jobs": 0
        },
        {
            "name": "vs2022-Debug",
            "configurePreset": "vs2022-x64",
            "configuration": "Debug"
        },
        {
            "name": "vs2022-Release",
            "configurePreset": "vs2022-x64",
            "configuration": "Release"
        }
    ]
}