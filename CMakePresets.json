{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install/${presetName}",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/bin",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/bin",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/lib/${presetName}"
            }
        },
        {
            "name": "ninja-debug-msvc",
            "inherits": "base",
            "displayName": "Ninja (MSVC) - Debug",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "ninja-release-msvc",
            "inherits": "base",
            "displayName": "Ninja (MSVC) - Release",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "ninja-debug-clang",
            "inherits": "base",
            "displayName": "Ninja (Clang) - Debug",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "ninja-release-clang",
            "inherits": "base",
            "displayName": "Ninja (Clang) - Release",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ninja-debug-msvc",
            "configurePreset": "ninja-debug-msvc",
            "jobs": 0
        },
        {
            "name": "ninja-release-msvc",
            "configurePreset": "ninja-release-msvc",
            "jobs": 0
        },
        {
            "name": "ninja-debug-clang",
            "configurePreset": "ninja-debug-clang",
            "jobs": 0
        },
        {
            "name": "ninja-release-clang",
            "configurePreset": "ninja-release-clang",
            "jobs": 0
        }
    ]
}